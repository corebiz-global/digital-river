{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "declaration": true,
    "jsx": "preserve",
    "lib": ["es2017", "dom", "es2018.promise"],
    "noEmitOnError": false,
    "sourceMap": true,
    "types": ["node"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules"],
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.ts",
    "./**/*.d.ts"
  ],
  "typeAcquisition": {
    "enable": false
  },
  "extends": "@vtex/tsconfig"
}
